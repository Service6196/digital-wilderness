---
import BaseLayout from '../layouts/BaseLayout.astro';
import Footer from '../components/Footer.astro';
---

<BaseLayout title="404 - 页面未找到 | Digital Wilderness">
    
    <main class="pt-[160px] px-[4vw] min-h-[60vh] flex items-center justify-center">
        <div class="text-center">
            <h1 class="text-[8rem] md:text-[12rem] font-bold leading-none opacity-10 mb-8">
                404
            </h1>
            <h2 class="text-2xl md:text-4xl font-bold mb-4">
                页面未找到
            </h2>
            <p class="opacity-60 mb-8 max-w-md mx-auto">
                你访问的页面可能已被移动、删除或从未存在过。
            </p>
            <div class="flex justify-center gap-4">
                <a 
                    href="/" 
                    class="px-6 py-3 bg-[var(--accent)] text-white rounded-full hover:opacity-90 transition-opacity"
                >
                    返回首页
                </a>
                <a 
                    href="/journal" 
                    class="px-6 py-3 border border-[var(--grid-line)] rounded-full hover:bg-[var(--grid-line)] transition-colors"
                >
                    浏览日志
                </a>
            </div>
        </div>
    </main>

    <Footer />
</BaseLayout>
