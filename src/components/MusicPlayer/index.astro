<!-- Unified Music Capsule (toggles between icon-only and full capsule) -->
<div class="music-component" data-astro-transition-persist="music-player">
    <!-- Unified Capsule: [Cover] + [Lyrics] + [Icon] -->
    <div id="music-capsule" class="music-capsule">
        <img id="mini-cover" class="capsule-cover" src="" alt="" />
        <div class="capsule-info">
            <span id="mini-lyric" class="capsule-lyric">--</span>
        </div>
        <button id="music-toggle" class="capsule-toggle" aria-label="Toggle Music Player">
            <img src="/images/music-icon.png" alt="Music" class="w-6 h-6 object-contain" />
        </button>
    </div>

    <!-- Player Panel -->
    <div id="music-panel" class="music-panel">
        <div class="panel-header">
            <span class="panel-title">正在播放</span>
            <div class="search-box">
                <input type="text" id="music-search" placeholder="搜索音乐..." />
            </div>
        </div>

        <div class="mode-selector">
            <button class="mode-btn" data-mode="japanese">日系</button>
            <button class="mode-btn" data-mode="chinese-hot">热歌</button>
            <button class="mode-btn" data-mode="reading">专注</button>
        </div>

        <div id="search-results" class="search-results"></div>

        <div class="now-playing">
            <div class="cover-art">
                <img id="cover-img" src="" alt="Cover" />
            </div>
            <div class="track-info">
                <p id="track-title" class="track-title">--</p>
                <p id="track-artist" class="track-artist">--</p>
            </div>
        </div>

        <div class="progress-container">
            <span id="current-time" class="time">0:00</span>
            <input type="range" id="progress-bar" class="progress-bar" value="0" min="0" max="100" />
            <span id="duration" class="time">0:00</span>
        </div>

        <div class="controls">
            <button id="prev-btn" class="control-btn" aria-label="Previous">
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="currentColor"><polygon points="19 20 9 12 19 4 19 20"/><line x1="5" y1="19" x2="5" y2="5" stroke="currentColor" stroke-width="2"/></svg>
            </button>
            <button id="play-btn" class="control-btn play-btn" aria-label="Play">
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="currentColor" stroke="currentColor" stroke-width="2"><polygon points="6 3 20 12 6 21 6 3"/></svg>
            </button>
            <button id="next-btn" class="control-btn" aria-label="Next">
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="currentColor"><polygon points="5 4 15 12 5 20 5 4"/><line x1="19" y1="5" x2="19" y2="19" stroke="currentColor" stroke-width="2"/></svg>
            </button>
        </div>

        <div id="lyrics-container" class="lyrics-container">
            <p id="lyrics-text" class="lyrics-text"></p>
        </div>
    </div>

    <audio id="audio-player" preload="metadata"></audio>
</div>

<style>
    .music-component {
        position: fixed;
        inset: auto;
        bottom: calc(24px + env(safe-area-inset-bottom, 0px));
        right: calc(24px + env(safe-area-inset-right, 0px));
        z-index: 1200;
        display: flex;
        flex-direction: column;
        align-items: flex-end;
        gap: 12px;
        pointer-events: none;
        /* Removed transform: translate3d(0, 0, 0) as it creates a containing block 
           that breaks position: fixed on child elements */
    }

    .music-capsule,
    .music-panel {
        pointer-events: auto;
    }

    /* Unified Music Capsule */
    .music-capsule {
        display: flex;
        align-items: center;
        gap: 10px;
        padding: 6px;
        padding-right: 6px;
        background: var(--surface);
        border: 1px solid var(--grid-line);
        border-radius: 9999px;
        cursor: pointer;
        transition: all 0.4s cubic-bezier(0.16, 1, 0.3, 1);
        box-shadow: 0 4px 16px rgba(0,0,0,0.08);
        backdrop-filter: blur(12px);
        overflow: hidden;
    }

    .music-capsule:hover {
        box-shadow: 0 6px 24px rgba(0,0,0,0.12);
    }

    /* Cover (hidden by default, shown when playing) */
    .capsule-cover {
        width: 32px;
        height: 32px;
        min-width: 32px;
        border-radius: 50%;
        object-fit: cover;
        opacity: 0;
        transform: scale(0);
        transition: all 0.4s cubic-bezier(0.16, 1, 0.3, 1);
    }

    .capsule-cover.loaded {
        opacity: 1;
        transform: scale(1);
    }

    .music-capsule.playing .capsule-cover {
        animation: spin 8s linear infinite;
    }

    @keyframes spin {
        from { transform: rotate(0deg); }
        to { transform: rotate(360deg); }
    }

    /* Info (hidden by default, shown when playing) */
    .capsule-info {
        max-width: 0;
        overflow: hidden;
        opacity: 0;
        transition: all 0.4s cubic-bezier(0.16, 1, 0.3, 1);
    }

    .music-capsule.expanded .capsule-info {
        max-width: 160px;
        opacity: 1;
    }

    .capsule-lyric {
        font-family: var(--font-serif);
        font-size: 12px;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
        display: block;
        color: var(--text);
        padding-right: 4px;
    }

    /* Toggle Icon (always visible) */
    .capsule-toggle {
        width: 36px;
        height: 36px;
        min-width: 36px;
        border-radius: 50%;
        background: var(--grid-line);
        border: none;
        cursor: pointer;
        display: flex;
        align-items: center;
        justify-content: center;
        transition: all 0.3s cubic-bezier(0.16, 1, 0.3, 1);
        color: var(--text);
    }

    .capsule-toggle:hover {
        background: var(--text);
        color: var(--bg);
    }

    /* Music Panel - Desktop: fixed positioning, Mobile: absolute for proper overflow control */
    .music-panel {
        /* Desktop default */
        position: fixed;
        bottom: calc(80px + env(safe-area-inset-bottom, 0px));
        right: calc(24px + env(safe-area-inset-right, 0px));
        width: 320px;
        max-height: 70vh;
        background: var(--surface);
        border: 1px solid var(--grid-line);
        border-radius: 16px;
        padding: 20px;
        opacity: 0;
        visibility: hidden;
        transform: translateY(10px) scale(0.98);
        transform-origin: bottom right;
        transition: all 0.3s cubic-bezier(0.16, 1, 0.3, 1);
        overflow: hidden;
        overflow-y: auto;
        box-shadow: 0 10px 40px rgba(0,0,0,0.15);
        backdrop-filter: blur(20px);
        z-index: 1201;
    }

    .music-panel.active {
        opacity: 1;
        visibility: visible;
        transform: translateY(0) scale(1);
    }

    .panel-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 16px;
    }

    .panel-title {
        font-family: var(--font-serif);
        font-size: 13px;
        font-weight: 500;
        letter-spacing: 0.05em;
        opacity: 0.6;
        color: var(--text);
    }

    .search-box input {
        background: var(--grid-line);
        border: none;
        padding: 6px 12px;
        border-radius: 20px;
        font-size: 12px;
        width: 120px;
        transition: width 0.3s;
        color: var(--text);
    }

    .search-box input:focus {
        outline: none;
        width: 160px;
        background: rgba(0,0,0,0.08);
    }

    .now-playing {
        display: flex;
        align-items: center;
        gap: 16px;
        margin-bottom: 20px;
    }

    .cover-art {
        width: 64px;
        height: 64px;
        border-radius: 8px;
        overflow: hidden;
        background: var(--grid-line);
        flex-shrink: 0;
    }

    .cover-art img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        opacity: 0;
        transition: opacity 0.3s;
    }

    .cover-art img.loaded {
        opacity: 1;
    }

    .track-info {
        flex: 1;
        min-width: 0;
    }

    .track-title {
        font-family: var(--font-serif);
        font-size: 15px;
        font-weight: 600;
        margin: 0 0 4px 0;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
        color: var(--text);
    }

    .track-artist {
        font-size: 12px;
        opacity: 0.6;
        margin: 0;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
        color: var(--text);
    }
</style>

