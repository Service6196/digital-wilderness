    /* ========================================
       MOBILE STYLES - Complete Refactor
       Strategy: Panel uses FIXED positioning
       LEFT edge starts from screen left margin
       RIGHT edge stops before the toggle button area
       Panel never overflows right side of screen
       ======================================== */
    @media (max-width: 640px) {
        .music-component {
            position: fixed;
            bottom: calc(16px + env(safe-area-inset-bottom, 0px));
            right: calc(16px + env(safe-area-inset-right, 0px));
            z-index: 1200;
        }

        .music-capsule {
            padding: 4px;
        }

        .capsule-toggle {
            width: 32px;
            height: 32px;
            min-width: 32px;
        }

        .capsule-cover {
            width: 28px;
            height: 28px;
            min-width: 28px;
        }

        .capsule-info {
            max-width: 0;
        }

        .music-capsule.expanded .capsule-info {
            max-width: 140px;
        }

        /* PANEL: Fixed positioning, left-aligned, expands towards toggle button */
        .music-panel {
            position: fixed !important;
            /* Bottom: above the toggle button */
            bottom: calc(64px + env(safe-area-inset-bottom, 0px)) !important;
            /* LEFT edge: small margin from screen left */
            left: 12px !important;
            /* RIGHT edge: leave room for toggle button (button width + margin + gap) */
            right: calc(60px + env(safe-area-inset-right, 0px)) !important;
            /* Let width be auto-calculated from left/right */
            width: auto !important;
            max-width: 320px;
            max-height: 60vh;
            padding: 16px;
            border-radius: 12px;
            /* Animation from bottom left */
