<script>
    import { formatTime } from './utils';
    import { searchMusic, getSongUrl, getLyrics, getHotMix, getModePlaylist } from './services';
    import type { Song, LyricLine } from './types';

    const DEFAULT_KEYWORD = '周杰伦';
    const STORAGE_KEY = 'music-player-state';

    function initMusicPlayer() {
        const toggle = document.getElementById('music-toggle');
        const panel = document.getElementById('music-panel');
        const audio = document.getElementById('audio-player') as HTMLAudioElement;
        const searchInput = document.getElementById('music-search') as HTMLInputElement;
        const searchResults = document.getElementById('search-results');
        const coverEl = document.getElementById('cover-img') as HTMLImageElement;
        const titleEl = document.getElementById('track-title');
        const artistEl = document.getElementById('track-artist');
        const playBtn = document.getElementById('play-btn');
        const prevBtn = document.getElementById('prev-btn');
        const nextBtn = document.getElementById('next-btn');
        const progressBar = document.getElementById('progress-bar') as HTMLInputElement;
        const currentTimeEl = document.getElementById('current-time');
        const durationEl = document.getElementById('duration');
        const lyricsText = document.getElementById('lyrics-text');
        // New unified capsule
        const musicCapsule = document.getElementById('music-capsule');
        const capsuleCover = document.getElementById('mini-cover') as HTMLImageElement;
        const capsuleLyric = document.getElementById('mini-lyric');

        if (!toggle || !panel || !audio || !musicCapsule) return;
        if (toggle.hasAttribute('data-music-init')) return;
        toggle.setAttribute('data-music-init', 'true');

        let playlist: Song[] = [];
        let currentIndex = 0;
        let isPlaying = false;
        let lyrics: LyricLine[] = [];
        let debounceTimer: ReturnType<typeof setTimeout> | null = null;
        let currentLyricIndex = -1;
        let currentLyricText = '';
        let restoredFromState = false;

        audio.preload = 'metadata';

        const updateCover = (el: HTMLImageElement | null, src?: string) => {
            if (!el) return;
            if (src) {
                el.src = src;
                el.classList.add('loaded');
            } else {
                el.classList.remove('loaded');
            }
        };

        const persistState = (partial: Record<string, any> = {}) => {
            try {
                const snapshot = { playlist, currentIndex, isPlaying, ...partial };
                localStorage.setItem(STORAGE_KEY, JSON.stringify(snapshot));
            } catch (err) {
                console.warn('Persist state failed', err);
            }
        };

        // Mode Switching
        const modeBtns = document.querySelectorAll('.mode-btn');
        modeBtns.forEach(btn => {
            btn.addEventListener('click', async (e) => {
                const target = e.currentTarget as HTMLElement;
                const mode = target.getAttribute('data-mode');
                if (!mode) return;

                // UI feedback
                modeBtns.forEach(b => b.classList.remove('active'));
                target.classList.add('active');
                if (titleEl) titleEl.textContent = '加载中...';
                if (artistEl) artistEl.textContent = 'Switching Mode...';

                try {
                    const songs = await getModePlaylist(mode);
                    if (songs.length > 0) {
                        playlist = songs;
                        currentIndex = 0;
                        playSong(playlist[0], true);
                    } else {
                        if (titleEl) titleEl.textContent = '未找到内容';
                    }
                } catch (err) {
                    console.error('Mode switch failed', err);
                    if (titleEl) titleEl.textContent = '加载失败';
                }
            });
        });

        // Update capsule expansion state
        const updateCapsuleState = () => {
            if (!musicCapsule) return;
            // Expand capsule when playing and panel is closed
            const shouldExpand = isPlaying && !panel.classList.contains('active');
            musicCapsule.classList.toggle('expanded', shouldExpand);
            musicCapsule.classList.toggle('playing', isPlaying);
        };

        const forceCapsuleIfPlaying = () => {
            panel.classList.remove('active');
            searchResults?.classList.remove('active');
            updateCapsuleState();
        };

        const hydrateFromStorage = async () => {
            try {
                const raw = localStorage.getItem(STORAGE_KEY);
                if (!raw) return;
                const data = JSON.parse(raw);
                if (!data) return;

                if (Array.isArray(data.playlist) && data.playlist.length > 0) {
                    playlist = data.playlist;
                    currentIndex = data.currentIndex || 0;
                }

                const song: Song | undefined = playlist[currentIndex] || data.song;
                const url: string | undefined = data.url;

                if (song && url) {
                    restoredFromState = true;
                    if (titleEl) titleEl.textContent = song.name || '--';
                    if (artistEl) artistEl.textContent = song.artist || (song.artists?.join(', ')) || '--';
                    updateCover(coverEl, song.pic);
                    updateCover(capsuleCover, song.pic);
                    fetchAndRenderLyrics(song);
                    updateCapsuleState();
                }
            } catch (err) {
                console.warn('Hydrate state failed', err);
            }
        };

        const fetchAndRenderLyrics = async (song: Song) => {
            lyrics = await getLyrics(song);
            if (lyricsText && lyrics.length > 0) {
                lyricsText.textContent = lyrics[0]?.text || '';
            }
        };

        const playSong = async (song: Song, autoplay = true) => {
            currentIndex = playlist.indexOf(song);
            if (currentIndex === -1) {
                playlist.push(song);
                currentIndex = playlist.length - 1;
            }

            if (titleEl) titleEl.textContent = song.name || '加载中...';
            if (artistEl) artistEl.textContent = song.artist || (song.artists?.join(', ')) || '--';
            
            updateCover(coverEl, song.pic);
            updateCover(capsuleCover, song.pic);

            const url = await getSongUrl(song);
            if (url) {
                audio.src = url;
                persistState({ song, url, currentTime: 0 });
                if (autoplay) {
                    try {
                        await audio.play();
                    } catch (e) {
                        console.warn('Autoplay blocked:', e);
                    }
                }
            } else {
                if (titleEl) titleEl.textContent = '无法播放';
            }
            fetchAndRenderLyrics(song);
        };

        const handleSearch = async (query: string, showUI = true) => {
            if (!query.trim()) {
                searchResults?.classList.remove('active');
                return;
            }
            const results = await searchMusic(query);
            if (results.length > 0) {
                playlist = results;
                if (showUI) renderResults(results);
            } else if (showUI && searchResults) {
                searchResults.innerHTML = '<div class="search-item" style="padding:10px;">未找到结果</div>';
                searchResults.classList.add('active');
            }
        };

        function renderResults(data: Song[]) {
            if (!searchResults) return;
            
            searchResults.innerHTML = data.map((song, i) => `
                <div class="search-item" data-idx="${i}">
                    <div class="search-item-thumb">
                        ${song.pic 
                            ? `<img src="${song.pic}" alt="" loading="lazy"/>` 
                            : ''}
                    </div>
                    <div class="search-item-info">
                        <p class="search-item-title">${song.name}</p>
                        <p class="search-item-artist">${song.artist || song.artists?.join(', ') || '--'}</p>
                    </div>
                    <div class="source-badge ${song.source || ''}">
                        ${song.source === 'netease' ? '网易' : 
                          song.source === 'qq' ? 'QQ' : 
                          song.source === 'kuwo' ? '酷我' : '--'}
                    </div>
                </div>
            `).join('');
            
            searchResults.classList.add('active');

            searchResults.querySelectorAll('.search-item').forEach((item) => {
                item.addEventListener('click', () => {
                    const idx = parseInt(item.getAttribute('data-idx') || '0', 10);
                    if (playlist[idx]) {
                        playSong(playlist[idx], true);
                        searchResults?.classList.remove('active');
                        if (searchInput) searchInput.value = '';
                    }
                });
            });
        }

        const restorePromise = hydrateFromStorage();

        toggle.addEventListener('click', (e) => {
            e.stopPropagation();
            panel.classList.toggle('active');
            if (panel.classList.contains('active')) {
                musicCapsule?.classList.remove('expanded');
            } else {
                 searchResults?.classList.remove('active');
                 updateCapsuleState();
            }
        });

        // Capsule info area click opens panel
        musicCapsule?.querySelector('.capsule-info')?.addEventListener('click', (e) => {
            e.stopPropagation();
            panel.classList.add('active');
            musicCapsule?.classList.remove('expanded');
        });

        document.addEventListener('click', (e) => {
            const target = e.target as HTMLElement;
            if (!target.closest('.music-component')) {
                forceCapsuleIfPlaying();
            }
        });

        window.addEventListener('scroll', () => {
            if (isPlaying) {
                forceCapsuleIfPlaying();
            }
        }, { passive: true });

        searchInput?.addEventListener('input', (e) => {
            const query = (e.target as HTMLInputElement).value;
            if (debounceTimer) clearTimeout(debounceTimer);
            debounceTimer = setTimeout(() => {
                handleSearch(query, true);
            }, 500);
        });

        playBtn?.addEventListener('click', () => {
            // If no source yet but we have tracks, start the current/first song
            if (!audio.src && playlist.length > 0) {
                const startIdx = currentIndex < playlist.length ? currentIndex : 0;
                playSong(playlist[startIdx], true);
                return;
            }
            if (audio.paused) audio.play().catch(console.warn);
            else audio.pause();
        });

        const updatePlayIcon = () => {
             if (isPlaying) {
                playBtn!.innerHTML = `<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="currentColor" stroke="currentColor" stroke-width="2"><rect width="4" height="16" x="6" y="4"/><rect width="4" height="16" x="14" y="4"/></svg>`;
                musicCapsule?.classList.add('playing');
            } else {
                playBtn!.innerHTML = `<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="currentColor" stroke="currentColor" stroke-width="2"><polygon points="6 3 20 12 6 21 6 3"/></svg>`;
                musicCapsule?.classList.remove('playing');
            }
            updateCapsuleState();
        };

        const playNext = () => {
            if (playlist.length === 0) return;
            currentIndex = (currentIndex + 1) % playlist.length;
            playSong(playlist[currentIndex], true);
        };

        const playPrev = () => {
            if (playlist.length === 0) return;
            currentIndex = (currentIndex - 1 + playlist.length) % playlist.length;
            playSong(playlist[currentIndex], true);
        };

        prevBtn?.addEventListener('click', playPrev);
        nextBtn?.addEventListener('click', playNext);

        audio.addEventListener('play', () => { 
            isPlaying = true; 
            updatePlayIcon(); 
            persistState({ isPlaying: true, song: playlist[currentIndex], url: audio.src, currentTime: audio.currentTime });
        });
        audio.addEventListener('pause', () => { 
            isPlaying = false; 
            updatePlayIcon(); 
            persistState({ isPlaying: false, song: playlist[currentIndex], url: audio.src, currentTime: audio.currentTime });
        });
        audio.addEventListener('ended', playNext);
        audio.addEventListener('timeupdate', () => {
            const time = audio.currentTime;
            const duration = audio.duration;
            if (currentTimeEl) currentTimeEl.textContent = formatTime(time);
            if (durationEl && !isNaN(duration)) durationEl.textContent = formatTime(duration);
            if (progressBar && !isNaN(duration)) progressBar.value = String((time / duration) * 100);

            for (let i = lyrics.length - 1; i >= 0; i--) {
                if (time >= lyrics[i].time) {
                    if (currentLyricIndex !== i) {
                        currentLyricIndex = i;
                        currentLyricText = lyrics[i].text;
                        if (lyricsText) lyricsText.textContent = currentLyricText;
                        if (capsuleLyric) capsuleLyric.textContent = currentLyricText;
                    }
                    break;
                }
            }
        });

        progressBar?.addEventListener('input', () => {
            const val = parseFloat(progressBar.value);
            if (!isNaN(audio.duration)) audio.currentTime = (val / 100) * audio.duration;
        });

        restorePromise.finally(() => {
            if (!restoredFromState) {
                // Auto-play Japanese music by default
                getModePlaylist('japanese').then((songs) => {
                    if (songs.length > 0) {
                        playlist = songs;
                        // Highlight the Japanese mode button
                        document.querySelector('.mode-btn[data-mode="japanese"]')?.classList.add('active');
                        playSong(playlist[0], true);
                    } else {
                        // Fallback to default keyword
                        handleSearch(DEFAULT_KEYWORD, false).then(() => {
                            if (playlist.length > 0) playSong(playlist[0], true);
                        });
                    }
                });
            }
        });
    }

    if (document.readyState === 'loading') {
        document.addEventListener('DOMContentLoaded', initMusicPlayer);
    } else {
        initMusicPlayer();
    }
    document.addEventListener('astro:page-load', initMusicPlayer);
</script>
