---
interface Props {
    code: string;
    name: string;
    icon: string;
    image?: string;
}

const { code, name, icon, image } = Astro.props;
---

<div 
    class="entry-card min-w-[280px] h-[360px] flex flex-col justify-between group cursor-pointer relative overflow-hidden"
>
    <!-- 背景图片 -->
    {image && (
        <img 
            src={image} 
            alt={name}
            class="absolute inset-0 w-full h-full object-cover opacity-80 group-hover:opacity-100 transition-all duration-500 scale-100 group-hover:scale-105"
        />
    )}
    
    <!-- 渐变遮罩 -->
    <div class="absolute inset-0 bg-gradient-to-t from-black/80 via-black/30 to-transparent opacity-60 group-hover:opacity-90 transition-opacity"></div>
    
    <!-- 内容 -->
    <div class="relative z-10 p-6 flex flex-col justify-between h-full">
        <div class="flex justify-between items-start">
            <div class={`font-mono text-xs ${image ? 'text-white/60' : 'opacity-60'}`}>{code}</div>
            <i data-lucide={icon} class={`w-6 h-6 ${image ? 'text-white/80' : 'opacity-80'} group-hover:opacity-100`}></i>
        </div>
        
        <div>
            <h4 class={`text-base md:text-lg font-medium tracking-tight mb-2 ${image ? 'text-white' : ''} leading-tight`}>{name}</h4>
            <div class={`w-8 h-[1px] ${image ? 'bg-white/30' : 'bg-current opacity-30'} group-hover:w-full transition-all duration-500`}></div>
        </div>
    </div>
</div>
