<footer class="py-24 mt-12 border-t border-[var(--grid-line)] border-opacity-30 relative z-20 bg-[var(--bg)]">
    <div class="container mx-auto px-4 md:px-8 flex flex-col md:flex-row justify-between items-end md:items-center gap-8">
        
        <!-- Decoration / Digital Desk -->
        <div class="flex gap-8 opacity-60 hover:opacity-100 transition-opacity duration-500">
             <!-- Coffee (Ko-fi) -->
             <a href="#" title="Buy me a coffee" class="group relative block transform hover:-translate-y-1 transition-transform">
                <span class="text-2xl filter grayscale group-hover:grayscale-0 transition-all cursor-pointer">☕</span>
                <span class="absolute -top-10 left-1/2 -translate-x-1/2 text-[10px] font-mono bg-[var(--text)] text-[var(--bg)] px-2 py-1 rounded opacity-0 group-hover:opacity-100 transition-opacity whitespace-nowrap pointer-events-none">Fuel</span>
             </a>
             <!-- Envelope (Email) -->
             <a href="mailto:hello@theframe.design" title="Email" class="group relative block transform hover:-translate-y-1 transition-transform">
                <span class="text-2xl filter grayscale group-hover:grayscale-0 transition-all cursor-pointer">✉️</span>
                <span class="absolute -top-10 left-1/2 -translate-x-1/2 text-[10px] font-mono bg-[var(--text)] text-[var(--bg)] px-2 py-1 rounded opacity-0 group-hover:opacity-100 transition-opacity whitespace-nowrap pointer-events-none">Contact</span>
             </a>
             <!-- RSS -->
             <a href="/rss.xml" title="RSS" class="group relative block transform hover:-translate-y-1 transition-transform">
                <span class="text-2xl filter grayscale group-hover:grayscale-0 transition-all cursor-pointer">📡</span>
                <span class="absolute -top-10 left-1/2 -translate-x-1/2 text-[10px] font-mono bg-[var(--text)] text-[var(--bg)] px-2 py-1 rounded opacity-0 group-hover:opacity-100 transition-opacity whitespace-nowrap pointer-events-none">Signal</span>
             </a>
        </div>

        <!-- Copyright -->
        <div class="text-right">
             <p class="font-serif italic text-lg mb-1">Digital Wilderness</p>
             <p class="font-mono text-xs opacity-40">© {new Date().getFullYear()} Designed by Digital Wilderness (v3.3)</p>
        </div>

    </div>
</footer>
